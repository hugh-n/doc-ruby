<div class="login-page">
<div class="form">
<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, :style => "text-transform: uppercase; font-size: 12px; color: #CACCB6" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, :style => "text-transform: uppercase; font-size: 12px; color: #CACCB6" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me  %>
      <%= f.label :remember_me, :style => "text-transform: uppercase; font-size: 12px; color: #CACCB6"  %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "btn btn-default" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
